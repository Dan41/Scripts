local localPlayer = game.Players.LocalPlayer
local gui = localPlayer:FindFirstChild("PlayerGui")

if gui and not gui:FindFirstChild("NotificadoComSucesso", true) then
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "[⭐]Updated[⭐]",
        Text = "COMPATIBLE WITH CHAOS REMASTERED! :D",
        Icon = "rbxassetid://15944092143",
        Duration = 25
    })
end

wait(0.5)
local gui = Instance.new("ScreenGui")
gui.Name = "NotificadoComSucesso"
gui.ResetOnSpawn = false
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local function applyForceField(player)
    if player and not player:FindFirstChild("ForceField") then
        local forceField = Instance.new("ForceField")
        forceField.Parent = player.Character
    end
end

local function onForceFieldRemoved(player)
    wait(1)  -- Espera um pouco para garantir que o ForceField foi removido completamente
    applyForceField(player)
end

while true do
    local player = game.Players:FindFirstChild("Y_Laaz")
    if player then
        player.Character.ChildRemoved:Connect(function(child)
            if child.Name == "ForceField" then
                onForceFieldRemoved(player)
            end
        end)
        applyForceField(player)
    end
    wait(1)
end